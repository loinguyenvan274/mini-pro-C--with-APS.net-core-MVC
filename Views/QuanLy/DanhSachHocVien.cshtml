@model IEnumerable<Web_1.Models.HocVien>

@{
    Layout = "~/Views/QuanLy/_QuanLyLayout.cshtml";
    ViewData["Title"] = "Danh Sách Học Viên";
}

<h2>Danh Sách Học Viên</h2>

<div class="container">
    <div class="row">
        @foreach (var hocVien in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@hocVien._ten</h5>
                        <p class="card-text">
                            <strong>Email:</strong> @hocVien._email<br />
                            <strong>Số điện thoại:</strong> @hocVien._sdt<br />
                            <strong>Ngày sinh:</strong> @(hocVien._ngaySinh.HasValue ?
                                                hocVien._ngaySinh.Value.ToString("dd/MM/yyyy") : "N/A")
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="@Url.Action("ChiTietHocVien", "QuanLy", new { id = hocVien._id })"
                            class="btn btn-primary">Xem Chi Tiết</a>
                    </div>
                </div>
            </div>
        </div>
                }
    </div>
</div>

<style>
    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        background-color: #f9f9f9;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }
</style>