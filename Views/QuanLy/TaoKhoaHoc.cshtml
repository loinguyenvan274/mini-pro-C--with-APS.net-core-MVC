@model Web_1.Models.KhoaHoc

@{
    Layout = "~/Views/QuanLy/_QuanLyLayout.cshtml";
    ViewData["Title"] = "Tạo Khóa Học";
}
<div class="f2-tao-khoa-hoc">
    <div class="f2-tao-khoa-hoc-form styled-form">
        @using (Html.BeginForm("CreateKhoaHoc", "QuanLy", FormMethod.Post, new { id = "create-form" }))
        {
            <div class="form-group">
                <label class="form-label">Tên khóa học</label>
                <input asp-for="_tenKhoaHoc" class="form-control" required />
                <span asp-validation-for="_tenKhoaHoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label">Tên giảng viên</label>
                <input asp-for="_tenGiangVien" class="form-control" maxlength="100" required />
                <span asp-validation-for="_tenGiangVien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label">Thời gian khai giản</label>
                <input asp-for="_thoiGianKhaiGiang" class="form-control" type="datetime-local" required />
                <span asp-validation-for="_thoiGianKhaiGiang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label">Học phí</label>
                <input asp-for="_hocPhi" class="form-control" type="number" step="0.01" required />
                <span asp-validation-for="_hocPhi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label">Số lượng học viên tối đa</label>
                <input asp-for="_soLuongHocVienToiDa" class="form-control" type="number" min="1" required />
                <span asp-validation-for="_soLuongHocVienToiDa" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" id="create-button">Tạo khóa học</button>
        }
    </div>
</div>

